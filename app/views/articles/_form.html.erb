<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group"> 
        <div class="control-label">
          <% f.label :title %>
        </div>
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title here...", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group"> 
        <div class="control-label">
          <% f.label :medium %>
        </div>
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.text_field :medium, class: "form-control", placeholder: "Medium link here (without http://)...", autofocus: true %>
        </div>
      </div>

      <div class="form-group"> 
        <div class="control-label">
          <% f.label :text %>
        </div>
         <div class="col-sm-offset-2 col-sm-8">
        <%= f.text_area :text, rows: 20, class: "form-control", placeholder: "Write here...", autofocus: true %>
        </div> 
      </div>
      <div class="form-group"> 
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit "Publish now", class: 'btn btn-primary btn-md' %>
          <%= link_to 'Cancel', root_path, class: 'btn btn-danger btn-md' %>        
        </div>
      </div>
    <% end %>
  </div>
</div>
